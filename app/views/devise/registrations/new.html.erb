<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div><%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <div><%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: 'form-control'  %></div>
      </div>
      <!--<div><%= f.submit "Sign up" %></div>-->
      <div class="actions">
        <button type="submit" name="commit" class="btn btn-default">Sign up</button>
      </div>
  <% end %>

  <!--<% if session['day'] %>-->
      <p>We're going to save your line for today as soon as you sign up (you will be able to edit this line after registration): <%= session['day'] %></p>
      <!--<% end %>-->

  <%= render "devise/shared/links" %>
</div>